# File name: main.py
#:kivy 1.9.1

#:import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#:import get_color_from_hex kivy.utils.get_color_from_hex

ScreenManagement:
    transition: RiseInTransition()
	StartScreen:
	GameScreen:

<Button>:
	color: get_color_from_hex('#e3e3e3')
	background_color: get_color_from_hex('#89bdd3')
	height: self.texture_size[1] + (4 * root.padding[1])
	background_normal: "images/white_sample_background.jpg"
	font_size: self.height - (8 * root.padding[1])
	
<StartScreen>:
    name: "start"
	canvas.before:
		Rectangle:
            pos: self.pos
            size: self.size
			source: "images/main_background.jpg"

	Button:
		text: "Start Game"
		size_hint: 0.8, 0.12
		pos_hint: {'center_x': .5, 'center_y': .25}
		on_release: app.root.current = "game"

			
<GameScreen>:
    name: "game"
	padding: root.width * 0.01, root.width * 0.01
	
	FloatLayout:
		Painter:
			id: painter
		Button:
			text: "Clear"
			size_hint: 0.3, 0.1
			pos_hint: {'right': 0.95, 'top': 0.95}
			on_release: root.clear_canvas()
		Button:
			text: "Quit Game"
			size_hint: 0.8, 0.07
			pos_hint: {'center_x': .5, 'center_y': .1}
			on_release: app.root.current = "start"